<%= form_for(@song) do |f| %>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= f.label :title %> Title:
<%= f.text_field :title %>
<%= f.label :release_year %> Release Year:
<%= f.text_field :release_year %>
<%= f.label :released %> Released:
<%= f.check_box :released %>
<%= f.label :artist_name %> Artist Name:
<%= f.text_field :artist_name %>
<%= f.label :genre %> Genre:
<%= f.text_field :genre %>
<%= f.submit %>
<% end %>
